<mxfile host="app.diagrams.net">
  <diagram name="User Registration Flowchart" id="flowchart">
    <mxGraphModel dx="1300" dy="800" grid="1" gridSize="10" guides="1">
      <root>
        <mxCell id="0"/>
        <mxCell id="1" parent="0"/>

        <!-- Start -->
        <mxCell id="2" value="Start" style="shape=terminator;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="100" y="40" width="160" height="40" as="geometry"/>
        </mxCell>

        <!-- Input: Registration Form -->
        <mxCell id="3" value="User submits registration form" style="shape=parallelogram;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="100" y="100" width="220" height="50" as="geometry"/>
        </mxCell>

        <!-- Process: Validate Inputs -->
        <mxCell id="4" value="Validate input fields" style="shape=process;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="100" y="170" width="220" height="50" as="geometry"/>
        </mxCell>

        <!-- Decision: Email exists? -->
        <mxCell id="5" value="Does email already exist?" style="shape=rhombus;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="100" y="240" width="220" height="60" as="geometry"/>
        </mxCell>

        <!-- Output: Email exists error -->
        <mxCell id="6" value="Return error: Email exists" style="shape=parallelogram;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="360" y="240" width="220" height="50" as="geometry"/>
        </mxCell>

        <!-- Process: Hash password -->
        <mxCell id="7" value="Hash password" style="shape=process;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="100" y="320" width="220" height="50" as="geometry"/>
        </mxCell>

        <!-- Process: Save to DB -->
        <mxCell id="8" value="Save user to database" style="shape=process;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="100" y="390" width="220" height="50" as="geometry"/>
        </mxCell>

        <!-- Output: Success -->
        <mxCell id="9" value="Return success + token" style="shape=parallelogram;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="100" y="460" width="220" height="50" as="geometry"/>
        </mxCell>

        <!-- End -->
        <mxCell id="10" value="End" style="shape=terminator;whiteSpace=wrap;html=1;" vertex="1" parent="1">
          <mxGeometry x="100" y="530" width="160" height="40" as="geometry"/>
        </mxCell>

        <!-- Connectors -->
        <mxCell style="endArrow=block;html=1;" edge="1" parent="1" source="2" target="3"><mxGeometry relative="1"/></mxCell>
        <mxCell style="endArrow=block;html=1;" edge="1" parent="1" source="3" target="4"><mxGeometry relative="1"/></mxCell>
        <mxCell style="endArrow=block;html=1;" edge="1" parent="1" source="4" target="5"><mxGeometry relative="1"/></mxCell>
        <mxCell style="endArrow=block;html=1;" edge="1" parent="1" source="5" target="6">
          <mxGeometry relative="1"><mxPoint x="360" y="270" as="targetPoint"/></mxGeometry>
        </mxCell>
        <mxCell style="endArrow=block;html=1;" edge="1" parent="1" source="5" target="7">
          <mxGeometry relative="1"><mxPoint x="210" y="300" as="targetPoint"/></mxGeometry>
        </mxCell>
        <mxCell style="endArrow=block;html=1;" edge="1" parent="1" source="7" target="8"><mxGeometry relative="1"/></mxCell>
        <mxCell style="endArrow=block;html=1;" edge="1" parent="1" source="8" target="9"><mxGeometry relative="1"/></mxCell>
        <mxCell style="endArrow=block;html=1;" edge="1" parent="1" source="9" target="10"><mxGeometry relative="1"/></mxCell>

      </root>
    </mxGraphModel>
  </diagram>
</mxfile>
